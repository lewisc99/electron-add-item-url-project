  "keywords": [
    "Electron",
    "Master Electron",
    "demo"
  ],
  "author": "Lewis",
  "license": "MIT",
  "devDependencies": {
    "electron": "^9.0.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^2.0.0"
  },
  "dependencies": {
    "electron-log": "^5.1.2",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.lewis.readit",
    "copyright": "Copyright Stackacademy.tv",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": [
        {
          "repo": "electron-add-item-url-project",
          "owner": "lewis99",
          "provider": "github",
          "releaseType": "release",
          "private": false
        }
      ]
